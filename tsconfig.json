{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "commonjs",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": false, //видає помилку, коли є оголошена, але невикористовувана змінна
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
    }
  },
  "exclude": ["node_modules", "dist", " **/*.spec.ts"],
  "include": ["src"]
}
